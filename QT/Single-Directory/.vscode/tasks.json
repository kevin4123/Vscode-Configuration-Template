{
  "version": "2.0.0",
  "tasks": [
	{
		"label": "CMake Configure (MinGW)",
		"type": "shell",
		"command": "cmake",
		"args": [
			"-S",
			".",
			"-B",
			"build",
			"-G",
			"MinGW Makefiles",
			"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
			"-DCMAKE_VERBOSE_MAKEFILE=ON"
		],
		"group": {
			"kind": "build",
			"isDefault": false
		},
		"detail": " Configures the project for building with MinGW Makefiles."
	},
	{
		"label": "Open Qt Creator",
		"type": "shell",
		"command": "D:/Qt/Tools/QtCreator/bin/qtcreator.exe",
		"group": "none",
		"problemMatcher": [],
		"detail": "Opens the Qt Creator IDE."
	},
	{
		"label": "Open Qt Designer",
		"type": "shell",
		"command": "D:/Qt/6.9.2/msvc2022_64/bin/designer.exe",
		"args": [
			"mainwindow.ui",
		],
		"group": "none",
		"problemMatcher": [],
		"detail": "Opens the Qt Designer IDE."
	},
	{
		"label": "Open Qt Assistant",
		"type": "shell",
		"command": "D:/Qt/6.9.2/msvc2022_64/bin/assistant.exe",
		"group": "none",
		"problemMatcher": [],
		"detail": "Opens the Qt Designer IDE."
	},
	{
		"label": "openOCD flash",
		"type": "shell",
		"command": "openocd",
		"args": [
			"-f",
			"interface/stlink.cfg",
			"-f",
			"target/stm32f1x.cfg",
			"-c",
			"program build/<filename>.elf verify reset exit"
		],
		"group": {
			"kind": "build",
			"isDefault": false
		},
		"detail": "Flashes the STM32F103C8T6 microcontroller using openOCD."
	},
	{
		"label": "DOXYGEN",
		"type": "shell",
		"command": "doxygen",
		"args": [
			"Doxyfile"
		],
		"group": {
			"kind": "build",
			"isDefault": false
		},
		"detail": "Generates documentation using doxygen."
	}
]
}
